# Environment variables for Docker development
# Copy this to .env.development and modify as needed

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/docflow_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0
REDIS_KEY_PREFIX=docflow:

# File Storage Configuration (local filesystem)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
AUTH_SECRET=your-development-secret-key-here
NEXTAUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true

# PWA Authentication (replace with your actual endpoint)
PWA_AUTH_URL=https://your-pwa-auth-endpoint.com/api/login

# Telegram Configuration (optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Monitoring (basic logging)
LOG_LEVEL=debug

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development
LOG_LEVEL=debug

# File Upload Configuration
NEXT_PUBLIC_MONTH_YEAR_FUTURE_YEARS=0
NEXT_PUBLIC_MONTH_YEAR_PAST_YEARS=1
