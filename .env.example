# Database Configuration
DATABASE_URL=postgresql://postgres:your_secure_db_password@localhost:5432/docflow_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_db_password_change_this
POSTGRES_DB=docflow_db

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_secure_nextauth_secret_min_32_chars_change_this
AUTH_TRUST_HOST=true

# External PWA Authentication
PWA_AUTH_URL=https://intranet.pwa.co.th/login/webservice_login6.php

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_change_this
REDIS_DB=0
REDIS_KEY_PREFIX=docflow:

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@yourdomain.com
PGADMIN_DEFAULT_PASSWORD=your_secure_pgadmin_password_change_this

# Telegram Bot Configuration (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_default_chat_id_here

# Application Configuration
NODE_ENV=production
PORT=3000

# Security Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Document Upload Configuration
# Number of years to show in future for month/year dropdown (default: 1)
NEXT_PUBLIC_MONTH_YEAR_FUTURE_YEARS=1
# Number of years to show in past for month/year dropdown (default: 1)
NEXT_PUBLIC_MONTH_YEAR_PAST_YEARS=1

# Session Timeout Configuration (Optional - defaults will be used if not set)
# Maximum session duration regardless of activity (in seconds, default: 14400 = 4 hours)
SESSION_ABSOLUTE_TIMEOUT_SECONDS=14400
# Session expires after this period of inactivity (in seconds, default: 1800 = 30 minutes)
SESSION_IDLE_TIMEOUT_SECONDS=1800
# Time before expiration to show warning to user (in seconds, default: 300 = 5 minutes)
SESSION_WARNING_TIME_SECONDS=300